<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#1E1E1E"/> <!-- dark gray for spinner background -->

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#D10005"/> <!-- Persona red border -->

    <!-- Rounded corners -->
    <corners android:radius="8dp"/>

    <!-- Padding inside the spinner -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp"/>
</shape>
